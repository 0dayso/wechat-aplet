.jts-content{
    width: 94%;
    margin: 20px 12px;
}
.jts-content input{
    outline:none;
    box-sizing:border-box;
    -webkit-box-sizing:border-box;
    width: 100%;
    height: 40px;
    border: 1px solid #D8D8D8;
    padding-left: 8px;
    border-radius: 6px;
    -webkit-border-radius: 6px;
    margin: 8px 0;
    font-size: 16px;
    background-color: #ffffff;
}

.change-btn{
    margin: 12px;
    background-color: #f9972b;
    color: #ffffff;
    font-size: 16px;
}
.change-button-hover {
    opacity: 0.7;
}